@using FrontendObligationChecker.Models.Config
@using FrontendObligationChecker.ViewModels.PublicRegister
@using Microsoft.Extensions.Options
@model GuidanceViewModel

@inject IOptions<EmailAddressOptions> EmailAdresses

@{
    ViewData["Title"] = @Localizer["Guidance.PageTitle"];
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <span class="govuk-caption-xl">@Localizer["Guidance.Caption"]</span>
                <h1 class="govuk-heading-l">@Localizer["Guidance.PageTitle"]</h1>
                <p class="govuk-body-l">
                    @Localizer["Guidance.Description"]
                </p>
            </div>
            <div class="govuk-grid-column-full">
                <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
            </div>
            <div class="govuk-grid-column-two-thirds">
                <p class="govuk-body-s govuk-!-margin-bottom-2">
                    @Localizer["Guidance.From"] <a href="#" class="govuk-link govuk-link--no-visited-state govuk-!-font-weight-bold">
                        @Localizer["Guidance.DepartmentForEnvironmentLinkText"]
                    </a>
                </p>
                <p class="govuk-body-s govuk-!-margin-bottom-2">
                    @Localizer["Guidance.Published"] @Localizer["Guidance.Published2"] @Model.PublishedDate
                </p>
                <p class="govuk-body-s">
                    @Localizer["Guidance.LastUpdated"] @Model.LastUpdated — <a href="#" class="govuk-link govuk-link--no-visited-state ">
                        @Localizer["Guidance.SeeAllUpdates"]
                    </a>
                </p>
                <div data-button-location="top"
                     data-button-text-subscribe="@Localizer["Guidance.GetEmailsAboutThisPage"]"
                     data-button-text-unsubscribe="Stop getting emails about this page"
                     data-module="ga4-link-tracker"
                     class="gem-c-single-page-notification-button govuk-!-display-none-print govuk-!-margin-top-9 govuk-!-margin-bottom-6"
                     data-ga4-link-tracker-module-started="true">
                    <form action="#" method="POST">
                        <input type="hidden" name="base_path" value="#">
                        <button class="govuk-body-s gem-c-single-page-notification-button__submit" type="submit">
                            <svg class="gem-c-single-page-notification-button__icon"
                                 aria-hidden="true"
                                 xmlns="http://www.w3.org/2000/svg"
                                 height="18"
                                 width="18"
                                 viewBox="0 0 459.334 459.334">
                                <path fill="currentColor"
                                      d="M177.216 404.514c-.001.12-.009.239-.009.359 0 30.078 24.383 54.461 54.461 54.461s54.461-24.383 54.461-54.461c0-.12-.008-.239-.009-.359H175.216zM403.549 336.438l-49.015-72.002v-89.83c0-60.581-43.144-111.079-100.381-122.459V24.485C254.152 10.963 243.19 0 229.667 0s-24.485 10.963-24.485 24.485v27.663c-57.237 11.381-100.381 61.879-100.381 122.459v89.83l-49.015 72.002a24.76 24.76 0 0 0 20.468 38.693H383.08a24.761 24.761 0 0 0 20.469-38.694z">
                                </path>
                            </svg>
                            <span class="gem-c-single-page-notication-button__text">@Localizer["Guidance.GetEmailsAboutThisPage"]</span>
                        </button>
                    </form>
                </div>

                <h2 class="govuk-heading-m govuk-!-font-size-27">@Localizer["Guidance.Documents"]</h2>

                <section data-module="ga4-link-tracker" class="gem-c-attachment govuk-!-margin-bottom-8" data-ga4-link-tracker-module-started="true">
                    <div class="gem-c-attachment__thumbnail govuk-!-display-none-print">
                        <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" href="#">
                            <svg class="gem-c-attachment__thumbnail-image gem-c-attachment__thumbnail-image--spreadsheet" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
                                <path d="M12 12h75v27H12zm0 47h18.75v63H12zm55 2v59H51V61h16m2-2H49v63h20V59z" stroke-width="0"></path>
                                <path d="M49 61.05V120H32.8V61.05H49m2-2H30.75v63H51V59zm34 2V120H69.05V61.05H85m2-2H67v63h20V59z" stroke-width="0"></path>
                                <path d="M30 68.5h56.5M30 77.34h56.5M30 112.7h56.5M30 95.02h56.5M30 86.18h56.5M30 103.86h56.5" fill="none" stroke-miterlimit="10" stroke-width="2"></path>
                            </svg>
                        </a>
                    </div>
                    <div class="gem-c-attachment__details">
                        <h3 class="gem-c-attachment__title">
                            <a class="govuk-link govuk-link--no-visited-state gem-c-attachment__link"
                               target="_self"
                               href="#">@Localizer["Guidance.ProducersRegisteredForRpd"]</a>
                        </h3>

                        <p class="gem-c-attachment__metadata">

                            <span class="gem-c-attachment__attribute">
                                <abbr title="Comma Separated Value" class="gem-c-attachment__abbr">@Localizer["Guidance.Csv"]</abbr>
                            </span>
                            <span class="gem-c-attachment__attribute">@Model.ProducersRegisteredFileSize @Localizer["Guidance.Bytes"]</span>
                        </p>

                        <p class="gem-c-attachment__metadata">@Localizer["Guidance.ThisFileMayNotBeSuitable"]</p>

                        <details data-module="ga4-event-tracker" class="gem-c-details govuk-details govuk-!-margin-bottom-0" title="Request an accessible format." data-ga4-event-tracker-module-started="true">
                            <summary class="govuk-details__summary">
                                <span class="govuk-details__summary-text" data-ga4-expandable="">
                                    @Localizer["Guidance.RequestAnAccessibleFormat"]
                                </span>
                            </summary>
                            <div class="govuk-details__text">
                                @Localizer["Guidance.AccessibleFormatTextPart1"]
                                <a href="mailto:@EmailAdresses.Value.DefraHelpline" target="_blank" rel="noopener" class="govuk-link">
                                    @EmailAdresses.Value.DefraHelpline
                                </a>
                                @Localizer["Guidance.AccessibleFormatTextPart2"]
                            </div>
                        </details>
                    </div>
                </section>

                <section data-module="ga4-link-tracker" class="gem-c-attachment govuk-!-margin-bottom-9" data-ga4-link-tracker-module-started="true">
                    <div class="gem-c-attachment__thumbnail govuk-!-display-none-print">
                        <a class="govuk-link" target="_self" tabindex="-1" aria-hidden="true" href="#">
                            <svg class="gem-c-attachment__thumbnail-image gem-c-attachment__thumbnail-image--spreadsheet" version="1.1" viewBox="0 0 99 140" width="99" height="140" aria-hidden="true">
                                <path d="M12 12h75v27H12zm0 47h18.75v63H12zm55 2v59H51V61h16m2-2H49v63h20V59z" stroke-width="0"></path>
                                <path d="M49 61.05V120H32.8V61.05H49m2-2H30.75v63H51V59zm34 2V120H69.05V61.05H85m2-2H67v63h20V59z" stroke-width="0"></path>
                                <path d="M30 68.5h56.5M30 77.34h56.5M30 112.7h56.5M30 95.02h56.5M30 86.18h56.5M30 103.86h56.5" fill="none" stroke-miterlimit="10" stroke-width="2"></path>
                            </svg>
                        </a>
                    </div>
                    <div class="gem-c-attachment__details">
                        <h3 class="gem-c-attachment__title">
                            <a class="govuk-link govuk-link--no-visited-state gem-c-attachment__link"
                               target="_self"
                               href="#">@Localizer["Guidance.ComplianceSchemeRegisteredForRpd"]</a>
                        </h3>

                        <p class="gem-c-attachment__metadata">

                            <span class="gem-c-attachment__attribute">
                                <abbr title="Comma Separated Value" class="gem-c-attachment__abbr">@Localizer["Guidance.Csv"]</abbr>
                            </span>
                            <span class="gem-c-attachment__attribute">@Model.ComplianceSchemesRegisteredFileSize @Localizer["Guidance.Bytes"]</span>
                        </p>

                        <p class="gem-c-attachment__metadata">@Localizer["Guidance.ThisFileMayNotBeSuitable"]</p>

                        <details data-module="ga4-event-tracker" class="gem-c-details govuk-details govuk-!-margin-bottom-0" title="Request an accessible format." data-ga4-event-tracker-module-started="true">
                            <summary class="govuk-details__summary">
                                <span class="govuk-details__summary-text" data-ga4-expandable="">
                                    @Localizer["Guidance.RequestAnAccessibleFormat"]
                                </span>
                            </summary>
                            <div class="govuk-details__text">
                                @Localizer["Guidance.AccessibleFormatTextPart1"]
                                <a href="mailto:@EmailAdresses.Value.DefraHelpline" target="_blank" rel="noopener" class="govuk-link">
                                    @EmailAdresses.Value.DefraHelpline
                                </a>
                                @Localizer["Guidance.AccessibleFormatTextPart2"]
                            </div>
                        </details>
                    </div>
                </section>

                <section id="details">

                    <div class="gem-c-heading govuk-!-margin-bottom-4">
                        <h2 class="govuk-heading-m govuk-!-font-size-27">
                            @Localizer["Guidance.EnforcementAction"]
                        </h2>
                    </div>

                    <div data-module="govspeak"
                         class="gem-c-govspeak govuk-govspeak gem-c-govspeak--direction-ltr govuk-!-margin-bottom-0"
                         data-govspeak-module-started="true">
                        <div class="govspeak">
                            <p>@Localizer["Guidance.EnforcementActionDescription"]</p>
                            <ul class="govuk-list">
                                <li>
                                    <a class="govuk-link govuk-link--no-visited-state" href="#">@Localizer["Guidance.EnvironmentAgencyLink"]</a>
                                </li>
                                <li>
                                    <a class="govuk-link govuk-link--no-visited-state" href="#">@Localizer["Guidance.NaturalResourcesWalesLink"]</a>
                                </li>
                                <li>
                                    <a class="govuk-link govuk-link--no-visited-state" href="#">@Localizer["Guidance.ScottishEnvironmentProtectionAgencyLink"]</a>
                                </li>
                                <li>
                                    <a class="govuk-link govuk-link--no-visited-state" href="#">@Localizer["Guidance.NorthernIrelandEnvironmentAgencyLink"]</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </section>
                <hr class="govuk-!-margin-top-9 govuk-section-break govuk-section-break--m govuk-section-break--visible">
                <p class="govuk-body-s govuk-!-margin-bottom-2">
                    @Localizer["Guidance.Published"] @Localizer["Guidance.Published2"] @Model.PublishedDate
                </p>
                <p class="govuk-body-s">
                    @Localizer["Guidance.LastUpdated"] @Model.LastUpdated — <a href="#" class="govuk-link govuk-link--no-visited-state ">
                        @Localizer["Guidance.SeeAllUpdates"]
                    </a>
                </p>
                <div data-button-location="top"
                     data-button-text-subscribe="@Localizer["Guidance.GetEmailsAboutThisPage"]"
                     data-button-text-unsubscribe="Stop getting emails about this page"
                     data-module="ga4-link-tracker"
                     class="gem-c-single-page-notification-button govuk-!-display-none-print govuk-!-margin-bottom-6"
                     data-ga4-link-tracker-module-started="true">
                    <form action="#" method="POST">
                        <input type="hidden" name="base_path" value="#">
                        <button class="govuk-body-s gem-c-single-page-notification-button__submit" type="submit">
                            <svg class="gem-c-single-page-notification-button__icon"
                                 aria-hidden="true"
                                 xmlns="http://www.w3.org/2000/svg"
                                 height="18"
                                 width="18"
                                 viewBox="0 0 459.334 459.334">
                                <path fill="currentColor"
                                      d="M177.216 404.514c-.001.12-.009.239-.009.359 0 30.078 24.383 54.461 54.461 54.461s54.461-24.383 54.461-54.461c0-.12-.008-.239-.009-.359H175.216zM403.549 336.438l-49.015-72.002v-89.83c0-60.581-43.144-111.079-100.381-122.459V24.485C254.152 10.963 243.19 0 229.667 0s-24.485 10.963-24.485 24.485v27.663c-57.237 11.381-100.381 61.879-100.381 122.459v89.83l-49.015 72.002a24.76 24.76 0 0 0 20.468 38.693H383.08a24.761 24.761 0 0 0 20.469-38.694z">
                                </path>
                            </svg>
                            <span class="gem-c-single-page-notication-button__text">@Localizer["Guidance.GetEmailsAboutThisPage"]</span>
                        </button>
                    </form>
                </div>

            </div>
            <div class="govuk-grid-column-full">
                <div class="app-contact-panel">
                    <h2 class="govuk-heading-s">@Localizer["Guidance.ExploreTheTopic"]</h2>
                    <p class="govuk-body-s govuk-!-font-weight-bold">
                        <a class="govuk-link govuk-link--no-visited-state" href="#">@Localizer["Guidance.BusinessAndTheEnvironmentLink"]</a>
                    </p>
                </div>
            </div>
        </div>
    </main>
</div>