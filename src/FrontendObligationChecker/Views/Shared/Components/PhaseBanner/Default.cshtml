@model PhaseBannerModel

@if (Model!.ShowBanner)
{
    <div class="govuk-phase-banner">
        <p class="govuk-phase-banner__content">
            <strong class="govuk-tag govuk-phase-banner__content__tag">
                @Localizer[Model.Status]
            </strong>
            <span class="govuk-phase-banner__text">
                @Localizer["PhaseBanner.ThisIsNewService"] <a class="govuk-link" rel="noreferrer noopener" target="_blank" 
                                                              href="@Model.Url">@Localizer["PhaseBanner.Feedback"]</a> @Localizer["PhaseBanner.ImproveIt"]
            </span>
        </p>
    </div>
}